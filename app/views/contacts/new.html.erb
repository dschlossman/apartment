<div align="center">
  <h3>Send Us a Message</h3>

  <%= simple_form_for Contact.new, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true, :placeholder => "Name...", label: false %>
    <%= f.input :email, :required => true, :placeholder => "Email", label: false %>
    <%= f.input :subject, :required => true, :placeholder => "Subject", label: false %>
    <%= f.input :message, :as => :text, :placeholder => "Enter a message...", label: false %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>